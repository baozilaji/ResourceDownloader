{
    "name": "ResourceDownloader",
    "version": "0.0.2",
    "manifest_version": 2,
    "description": "download all resource of website which you concerned.",
    "icons": {
        "16": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "background": {
        "scripts": ["js/utils.js", "js/background.js"]
    },
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_title": "ResourceDownloader",
        "default_popup": "option.html"
    },
    "permissions": [
        "webRequest",
        "storage",
        "downloads",
        "http://*/*",
        "https://*/*"
    ]
}